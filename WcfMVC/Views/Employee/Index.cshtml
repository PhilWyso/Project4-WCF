@model IEnumerable<WcfMVC.Models.EmployeeModel>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    <div>
        <h2>Employee Details</h2>
        @Html.ActionLink("Add Employee", "Create", "Employee")
    </div>
    <div>
        <table class="table">
            <tr>
                <th style="text-align:left">
                    Name
                </th>
                <th style="text-align:left">
                    Salary
                </th>
                <th style="text-align:left">
                    Address
                </th>
                <th style="text-align:left">
                    Department Name
                </th>
                <th style="text-align:left">
                    Manage
                </th>
            </tr>

            @{
                foreach (var item in Model)
                {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Salary
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.DepartmentName
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { ID = @item.ID }) /@Html.ActionLink("Delete", "Delete", new { ID = @item.ID })

                </td>

            </tr>
                }
            }

        </table>

    </div>


}  